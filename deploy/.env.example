# Environment variables for Oracle Cloud deployment
# Copy this file to .env and update the values

# JWT Secret - Generate a secure secret for production
JWT_SECRET=change-this-to-a-secure-secret-in-production

# Database configuration - persistent storage path
DATABASE_PATH=/app/data/db.sqlite

# Application environment
ENVIRONMENT=production

# Application settings
PORT=8080
HOST=0.0.0.0

# Oracle Cloud specific settings
# Set to 'true' if running on Oracle Cloud
ORACLE_CLOUD=true

# Domain configuration (update with your domain)
DOMAIN=your-domain.com

# SSL configuration
SSL_ENABLED=false
